{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build web-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/source/Espresso.WebApi/Espresso.WebApi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish web-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/source/Espresso.WebApi/Espresso.WebApi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch web-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "options": {
        "cwd": "${workspaceFolder}/source/Espresso.WebApi"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build parser",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/source/Espresso.ParserDeleter/Espresso.ParserDeleter.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish parser",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/source/Espresso.ParserDeleter/Espresso.ParserDeleter.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch parser",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/source/Espresso.ParserDeleter/Espresso.ParserDeleter.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "options": {
        "cwd": "${workspaceFolder}/source/Espresso.ParserDeleter"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Espresso Tests",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "/p:CollectCoverage=true",
        "/p:CoverletOutputFormat=lcov",
        "/p:CoverletOutput=./lcov.info",
        "${workspaceFolder}/tests/UnitTests/UnitTests.sln"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}

{
  "files.exclude": {
    "**/.git": false,
    "**/obj": true,
    "**/bin": true,
    "**/node_modules": true,
    "**/ClientApp/build": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "csharp.maxProjectFileCountForDiagnosticAnalysis": 0,
  "csharp.semanticHighlighting.enabled": true,
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.autoStart": true,
  "omnisharp.enableMsBuildLoadProjectsOnDemand": false,
  "omnisharp.enableImportCompletion": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "eslint.packageManager": "npm",
  "eslint.workingDirectories": ["./source/Espresso.WebApi/ClientApp"],
  "eslint.options": {
    "configFile": ".eslintrc"
  },
  "eslint.lintTask.enable": true,
  "eslint.nodePath": "./source/Espresso.WebApi/ClientApp/node_modules",
  "prettier.configPath": "./source/Espresso.WebApi/ClientApp/.prettierrc"
}

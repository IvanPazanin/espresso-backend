{
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!go",
    "!handlebars",
    "!haskell",
    "!jade",
    "!java",
    "!latex",
    "!less",
    "!php",
    "!pug",
    "!python",
    "!rust",
    "!scala",
    "aspnetcorerazor",
    "dockerfile",
    "git-rebase",
    "groovy",
    "makefile",
    "shellscript",
    "xml"
  ],
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    ".vscode-insiders",
    "**/bin/**",
    "**/obj/**",
    "**/TestReports/**"
  ],
  "cSpell.words": ["CQRS", "Mediat", "Xunit"],
  "csharp.maxProjectFileCountForDiagnosticAnalysis": 0,
  "csharp.semanticHighlighting.enabled": true,
  "editor.foldingImportsByDefault": true,
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.nodePath": "./source/client/node_modules",
  "eslint.options": {
    "configFile": ".eslintrc"
  },
  "eslint.packageManager": "npm",
  "eslint.validate": ["javascript", "typescript"],
  "eslint.workingDirectories": ["./source/client"],
  "files.associations": {
    "*.make": "makefile",
    "*.docker": "dockerfile",
    "*.ruleset": "xml"
  },
  "files.exclude": {
    "**/.git": true,
    "**/obj": true,
    "**/bin": true,
    "**/node_modules": true,
    "**/client/build": true,
    "**/.vs": true
  },
  "omnisharp.autoStart": true,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableMsBuildLoadProjectsOnDemand": false,
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.projectLoadTimeout": 360,
  "omnisharp.enableAsyncCompletion": true,
  "omnisharp.useEditorFormattingSettings": true,
  "omnisharp.organizeImportsOnFormat": true,
  "omnisharp.useModernNet": true,
  "prettier.configPath": "./source/client/.prettierrc",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/obj": true,
    "**/bin": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/obj": true,
    "**/bin": true
  },
  "dotnet.defaultSolution": "Espresso.sln",
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "sarif-viewer.connectToGithubCodeScanning": "off",
  "cmake.configureOnOpen": false
}

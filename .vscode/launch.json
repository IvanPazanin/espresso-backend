{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "webapi-local",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-webapi",
      "program": "${workspaceFolder}/source/server/WebApi/Espresso.WebApi/bin/Debug/net9.0/Espresso.WebApi.dll",
      "args": ["--launch-profile", "web-api-local"],
      "cwd": "${workspaceFolder}/source/server/WebApi/Espresso.WebApi",
      "stopAtEntry": false,
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "dashboard-local",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-dashboard",
      "program": "${workspaceFolder}/source/server/Dashboard/Espresso.Dashboard/bin/Debug/net9.0/Espresso.Dashboard.dll",
      "args": ["--launch-profile", "dashboard-local"],
      "cwd": "${workspaceFolder}/source/server/Dashboard/Espresso.Dashboard",
      "stopAtEntry": false,
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}

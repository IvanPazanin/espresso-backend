{
  "AppConfiguration": {
    "NewNewsPortalsPosition": 3,
    "Version": "2.0.0",
    "MajorVersion": 2,
    "MinorVersion": 0,
    "FeaturedArticlesTake": 10
  },
  "SpaConfiguration": {
    "UseSpaProxyServer": false,
    "EnableCors": false,
    "SpaProxyServerUrl": ""
  },
  "DatabaseConfiguration": {
    "CommandTimeoutInSeconds": 120,
    "QueryTrackingBehavior": 1,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  },
  "DateTimeConfiguration": {
    "MaxAgeOfArticlesInDays": 5,
    "MaxAgeOfTrendingArticlesInHours": 24,
    "MaxAgeOfFeaturedArticlesInHours": 24,
    "MaxAgeOfNewNewsPortalInDays": 30
  },
  "CronJobsConfiguration": {
    "ApplicationDownloadStatisticsCronExpression": "0 8 * * *",
    "WebApiReportCronExpression": "2 8 * * *"
  },
  "AllowedHosts": "*",
  "Logging": {
    "Console": {
      "TimestampFormat": "\nHH:mm:ss.ff - ",
      "UseUtcTimestamp": true
    }
  }
}

<AuthorizeView>
    <Authorized>
        <MudLink Href="Identity/Account/Manage" Underline="Underline.None" Color="Color.Secondary">Hello, @(context.User?.Identity?.Name)</MudLink>
        <form method="post" action="Identity/Account/LogOut" style="margin-left: 10px;">
            <button type="submit">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <MudLink Href="Identity/Account/Login">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>

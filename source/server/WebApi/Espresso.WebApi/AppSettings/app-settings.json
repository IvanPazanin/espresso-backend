{
  "AllowedHosts": "*",
  "HttpClientConfiguration": {
    "SlackHttpClientConfiguration": {
      "MaxRetries": 1,
      "TimeoutInSeconds": 5
    }
  },
  "RabbitMqConfiguration": {
    "ArticlesQueueName": "articles-queue",
    "HostName": "rabbitmq",
    "Port": 5672,
    "UseRabbitMqServer": false
  },
  "SpaConfiguration": {
    "EnableCors": false,
    "SpaProxyServerUrl": "",
    "UseSpaProxyServer": false
  },
  "SystemTextJsonSerializerConfiguration": {
    "AllowTrailingCommas": true,
    "MaxDepth": 100,
    "PropertyNameCaseInsensitive": true,
    "ReadCommentHandling": 1
  },
  "TrendingScoreConfiguration": {
    "AgeWeight": 0.9,
    "HalfOfMaxTrendingScoreValue": 500
  },
  "Logging": {
    "Console": {
      "TimestampFormat": "\nHH:mm:ss.ff - ",
      "UseUtcTimestamp": true
    }
  }
}

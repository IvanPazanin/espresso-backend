{
  "AppConfiguration": {
    "Version": "1.4.5",
    "MajorVersion": 1,
    "MinorVersion": 4,
    "MaxAgeOfArticlesInDays": 5
  },
  "DatabaseConfiguration": {
    "CommandTimeoutInSeconds": 120
  },
  "CronJobsConfiguration": {
    "DeleteArticlesCronExpression": "0 * * * *",
    "ParserDeleterPerformanceCronExpression": "0 8 * * *",
    "ParseArticlesCronExpression": "*/1 * * * *",
    "DeleteArticlesCancellationInSeconds": 360,
    "ParseArticlesCancellationInSeconds": 45
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning"
    },
    "Console": {
      "TimestampFormat": "\nHH:mm:ss.ff - ",
      "UseUtcTimestamp": true
    }
  }
}

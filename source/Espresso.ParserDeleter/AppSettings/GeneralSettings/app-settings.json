{
  "AppConfiguration": {
    "Version": "2.1.0",
    "MajorVersion": 2,
    "MinorVersion": 1,
    "MaxAgeOfArticlesInDays": 5
  },
  "ArticleSimilarityConfiguration": {
    "SimilarityScoreThreshold": 0.61,
    "ArticlePublishDateTimeDiferenceThresholdInHours": 24,
    "MaxAgeOfSimilarArticleCheckingInHours": 32,
    "GroupSimilarArticlesBatchSize": 5000
  },
  "CronJobsConfiguration": {
    "DeleteArticlesCronExpression": "0 * * * *",
    "ParserDeleterReportCronExpression": "1 8 * * *",
    "ParseArticlesCronExpression": "*/1 * * * *"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning"
    },
    "Console": {
      "TimestampFormat": "\nHH:mm:ss.ff - ",
      "UseUtcTimestamp": true
    }
  }
}
